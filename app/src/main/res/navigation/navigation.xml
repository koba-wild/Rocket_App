<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/rocketListFragment">

    <fragment
        android:id="@+id/rocketListFragment"
        android:name="com.example.dragonx.presentation.RocketList.RocketListFragment"
        android:label="DragonX rockets"
        tools:layout="@layout/fragment_rocket_list" >
        <action
            android:id="@+id/action_rocketListFragment_to_rocketDetailsFragment"
            app:destination="@id/rocketDetailsFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
    </fragment>
    <fragment
        android:id="@+id/rocketDetailsFragment"
        android:name="com.example.dragonx.presentation.RocketDetails.RocketDetailsFragment"
        android:label="Rocket details"
        tools:layout="@layout/fragment_rocket_details" >
        <argument
            android:name="rocketDetails"
            app:argType="com.example.dragonx.model.data.RocketDetails" />
    </fragment>
</navigation>